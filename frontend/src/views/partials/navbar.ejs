<!-- views/partials/navbar.ejs -->

<header>
  <div class="navigation">
    <div class="container">

      <a id="logo" href="../system/browse" target="_self">
        <img src="/images/logos/<%=general.logo%>" alt="Main Logo">
      </a>

      <ul>
        <li id="cat_link_li"><a href='' id="cat_link">Browse</a>
        <li id="about_link_li"><a href='' id="about_link">About</a>
        <li id="settings_li"><a href='' id="settings">Settings</a></li>
        <li id="logout_li"><a href='' id="logout">Logout</a></li>
        <li id='create_link_li'><a href='' id='create_link'>Create Post</a></li>
      </ul>

      <div id='burger-menu' onClick="toggleMobileNav()">
        <img src="data:image/svg+xml;utf8;base64," />
      </div>

    </div>
  </div>
</header>

<script>
  function toggleMobileNav() {
    $('.navigation').toggleClass('mobile-open');
  }
  document.addEventListener("DOMContentLoaded", function(event) {
    //TODO change http to https when right time will come
    var loc = 'http://'+location.host;
    document.getElementById('about_link').setAttribute('href', loc +'/system/about');
    document.getElementById('cat_link').setAttribute('href', loc +'/system/browse');
    document.getElementById('create_link').setAttribute('href', loc +'/system/create');
    document.getElementById('logout').setAttribute('href', loc +'/system/logout');
    document.getElementById('settings').setAttribute('href', loc +'/system/settings');
  });
</script>
